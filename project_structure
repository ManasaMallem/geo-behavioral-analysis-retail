import os

# Define the folder structure
folders = {
    "data": ["customer_data.csv", "store_locations.csv", "zip_demographics.csv"],
    "notebooks": [
        "01_data_cleaning.ipynb",
        "02_customer_analysis.ipynb",
        "03_geo_analysis.ipynb",
        "04_predictive_modeling.ipynb"
    ],
    "visuals": [".gitkeep"],
    "dashboard": [".gitkeep"]
}

# Create folders and placeholder files
for folder, files in folders.items():
    os.makedirs(folder, exist_ok=True)
    for file in files:
        file_path = os.path.join(folder, file)
        if not os.path.exists(file_path):
            with open(file_path, "w") as f:
                if file.endswith(".ipynb"):
                    f.write("# This is a placeholder for your notebook")
                elif file.endswith(".csv"):
                    f.write("column1,column2,column3\n")  # Sample CSV header
                elif file == ".gitkeep":
                    pass
                else:
                    f.write("")

# Create top-level report and README if not already there
for top_file in ["report.pdf", "README.md"]:
    if not os.path.exists(top_file):
        with open(top_file, "w") as f:
            f.write(f"This is your {top_file} file.")

print("âœ… Project folder structure created successfully.")
